<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".InformationActivity">
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingHorizontal="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/back"
            android:src="@drawable/ic_back"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:text="@string/string_information_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/maomao"
        android:scaleType="centerCrop"
        app:layout_constraintVertical_bias="0.1"
        app:shapeAppearance="@style/CircleStyle"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textView1"
        android:text="点击更换头像"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/user_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RadioGroup
        android:id="@+id/sexGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintBottom_toBottomOf="parent">
        <Space
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/boy_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:paddingStart="30dp"
            android:checked="true"
            android:drawableLeft="@drawable/ic_boy_avatar"
            android:drawablePadding="10dp"
            android:background="@drawable/shape_capsule_button"
            android:button="@null"
            android:text="男生"
            android:textSize="20sp"/>
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/girl_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:checked="false"
            android:paddingStart="30dp"
            android:drawableLeft="@drawable/ic_girl_avatar"
            android:drawablePadding="10dp"
            android:background="@drawable/shape_capsule_button"
            android:button="@null"
            android:text="女生"
            android:textSize="20sp"/>
        <Space
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"/>
    </RadioGroup>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/sexGroup">
        <TextView
            android:text="昵称"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/userName"
            android:hint="来填写你的名称吧~"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:maxLength="8"
            android:background="@drawable/shape_capsule_edittext"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"/>

        <TextView
            android:text="你的生日"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/select_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/user_birthday"
                android:text="2005-08-25"
                android:textColor="@color/color_9E9E9E"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_capsule_edittext"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"/>

            <ImageView
                android:src="@drawable/ic_arrow_down"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/commit"
        android:text="完成"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:elevation="8dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/color_403FFF"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>